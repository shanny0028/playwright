{
  "name": "playrightwo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -rf src/reports && rm -rf src/allure-results",
    "local": "npm run clean && cucumber-js -p chrome --tags",
    "local_edge": "npm run clean && cucumber-js -p edge --tags",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "feature:lint": "gherkin-lint \"features/specs/*.feature\" --config .gherkin-lintrc",
    "feature:lint:fix": "gherkin-lint \"features/**/*.feature\" --format json",
    "report": "node features/utils/generate-cucumber-report.js"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "features/specs/**/*.feature": [
      "gherkin-lint --config .gherkin-lintrc"
    ]
  },
  "author": "shantanu",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "@cucumber/pretty-formatter": "^2.4.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "cucumber-html-reporter": "^7.2.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cucumber": "^2.0.0",
    "eslint-plugin-playwright": "^2.4.0",
    "eslint-plugin-prettier": "^5.5.4",
    "gherkin-lint": "^4.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  },
  "dependencies": {
    "-": "^0.0.1",
    "ts-node": "^10.9.2"
  },
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"]
    }
  }

}
